@model List<DoctorAppointment.Utility.SummaryReport>
@using System.Globalization
@{
    ViewBag.Title = "AppointmentSummaryReport";
    Layout = "~/Views/Shared/_DoctorLayout.cshtml";
}

<h2 class="text-center">Appointment Summary Report</h2>

<div class="d-flex justify-content-between mb-3">
    <div>
        <label for="appointmentMonth">Select Month :</label>
        <input type="month" id="appointmentMonth" class="form-control" name="appointmentMonth" value="@DateTime.Now.ToString("yyyy-MM")">
    </div>
    <div>
        <button id="removeAllAppointmentButton" class="btn btn-outline-dark">Remove All Appointments</button>
        <button id="exportPDFButton" class="btn btn-outline-dark">Export to PDF</button>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-bordered" id="appointmentSummaryReport">
        <thead>
            <tr>
                <th>Date</th>
                <th># of Appointments</th>
                <th># of Appointment Closed</th>
                <th># of Appointment Cancelled</th>
            </tr>
        </thead>
        <tbody id="appointmentList">
        </tbody>
    </table>
</div>

@section scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.2/jspdf.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.15/jspdf.plugin.autotable.min.js"></script>
    <script src="~/Scripts/AppointmentSummaryReport.js"></script>
}