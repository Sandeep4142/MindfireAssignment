@using DoctorAppointment.Utility

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/CSS/DoctorLayout.css" rel="stylesheet" />

</head>

<body>
    @{
        var doctorID = ((SessionData)Session["Doctor"]).DoctorID;
        var doctorName = ((SessionData)Session["Doctor"]).DoctorName;
    }
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            <h3 class="text-light">@doctorName</h3>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">

                    <li>@Html.ActionLink("Upcoming Appointment", "UpcomingAppointments/" + doctorID, "Doctor", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Summary Report", "AppointmentSummaryReport/" + doctorID, "Doctor", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Detailed Report", "AppointmentDetailedReport/" + doctorID, "Doctor", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>

            @Html.ActionLink("LogOut", "LogOut", "Home", new { area = "" }, new { @class = "btn btn-primary" })
            
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="https://cdn.datatables.net/v/dt/dt-2.0.1/datatables.min.js"></script>

</body>
</html>

