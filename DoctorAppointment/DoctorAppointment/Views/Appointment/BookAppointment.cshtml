@model DoctorAppointment.Model.AppointmentModel

@{
    ViewBag.Title = "Book Appointment";
}
<link href="~/CSS/BookAppointment.css" rel="stylesheet" />

<h2>Book Appointment with Dr. @ViewBag.DoctorName </h2>

<div class="container">
    @using (Html.BeginForm("BookAppointment", "Appointment", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <div class="row appointmentBookContainer">

            <div class="col-md-6 appointmentDateContainer border border-2 p-5">
                <div class="form-group ">
                    @Html.LabelFor(model => model.AppointmentDate)
                    <input type="date" id="datepicker" class="form-control" min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    @Html.ValidationMessageFor(model => model.AppointmentDate, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <lable for="availableSlots">Available appointment slots</lable>
                    <div id="availableSlots"></div>
                </div>
            </div>

            <div class="col-md-6 patientDetailContainer border border-2 p-5">
                <h5>Enter your details :</h5>
                <div class="form-group">
                    <label for="PatientName">Name</label>
                    @Html.TextBoxFor(model => model.PatientName, new { @class = "form-control", required = "required", maxlength = "30" })
                    @Html.ValidationMessageFor(model => model.PatientName, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label for="PatientEmail">Email</label>
                    @Html.TextBoxFor(model => model.PatientEmail, new { @class = "form-control", type = "email", required = "required", maxlength = "30" })
                    @Html.ValidationMessageFor(model => model.PatientEmail, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label for="PatientPhone">Phone No</label>
                    @Html.TextBoxFor(model => model.PatientPhone, new { @class = "form-control", type = "tel",
                    pattern = @"^\d{10}$", title = "Please enter a valid 10-digit phone number", required = "required" })  
                    @Html.ValidationMessageFor(model => model.PatientPhone, "", new { @class = "text-danger" })
                </div>
                <button type="submit" class="btn btn-primary">Book Appointment</button>
            </div>
        </div>
        <input type="hidden" id="doctorID" value="@ViewBag.DoctorID">
    }
</div>
<a href="/Home/Index" class="d-inline-block ms-0" id="homeLink">Go to Home page</a>

@section scripts {
    <script src="~/Scripts/BookAppointment.js"></script>
}

