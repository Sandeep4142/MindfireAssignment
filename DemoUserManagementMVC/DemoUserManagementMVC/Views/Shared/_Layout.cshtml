@using DemoUserManagement.Utils

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/CSS/style.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link href="https://cdn.datatables.net/v/dt/dt-2.0.1/datatables.min.css" rel="stylesheet">
</head>
<body>

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container-fluid">
            @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("UserDetails", "Index", "UserDetails", new { area = "" }, new { @class = "nav-link" })</li>

                    @{
                        if (Session["User"] != null && ((SessionData)Session["User"]).IsAdmin)
                        {
                            <li>@Html.ActionLink("UserList", "Index", "UserList2", new { area = "" }, new { @class = "nav-link" })</li>
                        }
                    }
                </ul>
            </div>
            @{
                if (Session["User"] == null)
                {
                    @Html.ActionLink("Login", "Index", "Login", new { area = "" }, new { @class = "ms-3 btn btn-primary" })

                }
                else
                {
                    @Html.ActionLink("LogOut", "LogOut", "Login", new { area = "" }, new { @class = "ms-3 btn btn-primary" })

                }
            }
        </div>
    </nav>

    <div class="container body-content container2">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="https://cdn.datatables.net/v/dt/dt-2.0.1/datatables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#userListTable').dataTable({
                "pageLength": 5
            });
        })
    </script>

</body>
</html>
