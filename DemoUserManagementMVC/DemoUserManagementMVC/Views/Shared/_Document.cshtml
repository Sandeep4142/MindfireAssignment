@{
    ViewBag.Title = "Index";
}
@model List<DemoUserManagement.Model.DocumentModel>
<h4>DOCUMENT</h4>

<select id="Document" class="form-control" style="width: 250px;">
    <option value="">Select File --</option>
    <option value="1">Aadhaar Card</option>
    <option value="2">Pan Card</option>
</select>

<input type="file" id="DocumentUpload" style="width: 250px;">
<button id="addDocument" class="btn btn-primary ">Add Document</button>


<div class="table-responsive">
    <table id="documentTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th onclick="sortTable('documentTable', 0)">DocID</th>
                <th onclick="sortTable('documentTable', 1)">Document Type</th>
                <th onclick="sortTable('documentTable', 2)">Document Name</th>
                <th onclick="sortTable('documentTable', 3)">Time Stamp</th>
            </tr>
        </thead>
        <tbody id="documentTableBody">
            @{
                var i = Model.Count;
                if (Model != null && Model.Count > 0)
                {
                    foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.DocumentId</td>
                            <td>@user.DocumentType</td>
                            <td>
                                @{
                                    if (!string.IsNullOrEmpty(user.DocumentName))
                                    {
                                        <a href="@Url.Action("DownloadFile", "UserList", new { fileName = user.GuidDocumentName })" target="_blank">@user.DocumentName</a>
                                    }
                                }
                            </td>
                            <td>@user.TimeStamp.ToString()</td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
    <div id="documentPagination"></div>
</div>

<input type="hidden" id="docObjectId" value="@ViewBag.ObjectId" />
<input type="hidden" id="docObjectType" value="@ViewBag.ObjectType" />

<script src="~/Scripts/Document.js"></script>
