@{
    ViewBag.Title = "Index";
}

<h2>User Details</h2>

<div class="table-responsive">
    <table class="table table-striped table-bordered" id="userListTable">
        <thead>
            <tr>
                <th>Edit</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Father's Name</th>
                <th>Mother's Name</th>
                <th>Date Of Birth</th>
                <th>Primary PhoneNo.</th>
                <th>Primary EmailId</th>
                <th>Profile Pic</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in (List<DemoUserManagement.Model.UserDetailsModel>)ViewData["UserList"])
            {
                <tr>
                    <td>
                        @Html.ActionLink("Edit", "Index", "UserDetails", new { id = user.UserId }, null)
                    </td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.FathersName</td>
                    <td>@user.MothersName</td>
                    <td>@user.DateOfBirth.ToString("yyyy-MM-dd")</td>
                    <td>@user.PrimaryPhoneNo</td>
                    <td>@user.PrimaryEmailId</td>
                    <td>
                        @{
                            if (!string.IsNullOrEmpty(user.GuidProfilePhoto))
                            {
                                <a href="@Url.Action("DownloadFile", "UserList", new { fileName = user.GuidProfilePhoto })" target="_blank">@user.ProfilePhoto</a>
                            }
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@*using Jquery DataTable*@



